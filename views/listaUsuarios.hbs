<section id="seccionListaUsuarios">
    <div class="wrapper">
        <div class="container">
            <div class="row rowTable d-flex justify-content-center">
                {{#if rows.length}}
                    <table class="table table-sm">
                        <tr>
                            <td>USUARIO</td>
                            <td>ACTIVO</td>
                            <td>CAMBIAR ACTIVO</td>
                            <td>CAMBIAR CONTRASEÑA</td>
                        </tr>
                        {{#each rows}}
                            <tr>
                                <td>{{email}}</td>
                                <td>
                                    {{#if active}}
                                        <i class="fa fa-check" aria-hidden="true"></i>
                                    {{else}}
                                        <i class="fa fa-times" aria-hidden="true"></i>
                                    {{/if}}
                                </td>
                                <td>
                                    <a href="/admin/activar-usuario/{{id}}"><i class="fas fa-retweet"></i></a>
                                </td>
                                <td>
                                    <a href="/cambiar-contraseña/{{id}}"><i class="far fa-envelope"></i></a>
                                </td>
                            </tr>
                        {{/each}}
                    </table>
                {{/if}}
            </div>
        </div>
    </div>
</section>