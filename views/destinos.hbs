<section id="sectionInicio">
    <div class="wrapper">
        <div class="container-fluid">
            <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="../images/comienzo.jpg" alt="salida">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="../images/vuelo.jpg" alt="vuelo">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="../images/destino.jpg" alt="destino">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section id="sectionDestinos">
    <div class="wrapper">
        <div class="container-fluid">
            <div class="row" id="rowDestinos">
                {{#if viajes.length}}
                    {{#each viajes}}
                        <div class="col-md-3">
                            <div class="cardFrame">
                                <a href="/ver-destino/{{id}}">
                                    <img class="card-img-top" src="{{path}}" alt="{{travel}}">
                                    <div class="card-body">
                                        <h5>{{travel}}</h5>
                                        <div class="card-text">{{description}}</div>
                                        <div class="divPrecio">
                                            <span>
                                                {{price}}&euro;
                                            </span>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    {{/each}}
                {{/if}}
            </div>
        </div>
    </div>
</section>
<section id="sectionQuienes">
    <div class="wrapper">
        <div class="container-fluid">

        </div>
    </div>
</section>